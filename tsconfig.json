{
  "compilerOptions": {
    "target": "es2016",
    "rootDir": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "composite": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.*"]
}
